@model MvcMovie.Models.Estudio
@{
    // Obtém o nome do usuário da ViewBag
    var userName = ViewBag.UserName;
}

<h1>Bem-vindo, @userName!</h1>
<h1>Cadastro de Estúdio</h1>

<form asp-controller="User" asp-action="CadastroEstudio" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="Name" class="form-label">Nome:</label>
        <input type="text" id="Nome" name="Nome" value="@Model.Nome" class="form-control" required>
        <div class="invalid-feedback">
            O campo Nome é obrigatório.
        </div>
    </div>
    <div class="mb-3">
        <label for="Country" class="form-label">País:</label>
        <input type="text" id="Country" name="Country" value="@Model.Country" class="form-control" required>
        <div class="invalid-feedback">
            O campo País é obrigatório.
        </div>
    </div>
    <div class="mb-3">
        <label for="Site" class="form-label">Site:</label>
        <input type="url" id="Site" name="Site" value="@Model.Site" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a href="/User/Painel" class="btn btn-secondary">Voltar para a página Painel</a>
</form>